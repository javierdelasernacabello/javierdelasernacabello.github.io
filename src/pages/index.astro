    </main>

    <script>
      const wrap = document.getElementById("stageWrap");
      const hero = document.getElementById("heroImg");
      const strip = document.getElementById("strip");
      const frame = document.querySelector(".frame");
      const name = document.getElementById("name");
      const muralWrap = document.getElementById("muralWrap");
      const mural = document.getElementById("mural");

      function clamp(x, a, b){ return Math.max(a, Math.min(b, x)); }

      function onScroll() {
        const rect = wrap.getBoundingClientRect();
        const vh = window.innerHeight;
        const total = rect.height - vh;
        
        // 1. Calculamos el progreso general (0 a 1)
        const progress = clamp((0 - rect.top) / Math.max(1, total), 0, 1);

        // 2. Parámetros de control
        const isMobile = window.innerWidth < 700;
        // coverProgress controla la velocidad de la primera transición
        const coverProgress = clamp(progress / 0.14, 0, 1); 

        // --- 1. PORTFOLIO 2026 (El Strip lateral) ---
        // Reducimos fadeSpeed para que no desaparezca de golpe
        const fadeSpeed = isMobile ? 3 : 4; 
        const stripFade = clamp(1 - coverProgress * fadeSpeed, 0, 1);
        
        strip.style.opacity = stripFade.toFixed(3);

        const stripPct = isMobile ? 0.25 : 0.137; 
        const stripMax = isMobile ? 200 : 350;
        const baseStrip = Math.min(window.innerWidth * stripPct, stripMax);

        // El ancho se reduce suavemente
        const stripW = Math.max(0, baseStrip * stripFade);
        frame.style.setProperty("--strip-w", `${stripW.toFixed(2)}px`);

        // --- 2. ZOOM E IMAGEN (Desvanecimiento a blanco) ---
        const zoomFactor = isMobile ? 1.5 : 2.5; // Menos zoom en móvil para no pixelar
        const scale = 1 + (coverProgress * zoomFactor);
        hero.style.transform = `scale(${scale.toFixed(4)})`;

        // Controlamos la opacidad de la imagen de fondo
        const imageOpacity = clamp(1 - (progress - 0.10) * 20, 0, 1);
        hero.style.opacity = imageOpacity.toFixed(3);

        // --- 3. NOMBRE (Javier de la Serna) ---
        const nameFadeIn = clamp((progress - 0.00) * 20, 0, 1);
        const nameFadeOut = clamp((progress - 0.12) * 20, 0, 1);
        name.style.opacity = (nameFadeIn * (1 - nameFadeOut)).toFixed(3);

        // --- 4. MURAL DE FOTOS ---
        if (muralWrap && mural) {
          const muralFade = clamp((progress - 0.15) * 36, 0, 1);
          muralWrap.style.opacity = muralFade.toFixed(3);
          
          // Solo activamos el movimiento si el mural es visible
          if (muralFade > 0) {
            muralWrap.style.pointerEvents = "auto";
            const muralMove = clamp((progress - 0.18) / 0.78, 0, 1);
            const maxShift = Math.max(0, mural.scrollWidth - window.innerWidth);
            mural.style.transform = `translateX(${-muralMove * maxShift}px)`;
          } else {
            muralWrap.style.pointerEvents = "none";
          }
        }
      }

      window.addEventListener("scroll", onScroll, { passive: true });
      window.addEventListener("resize", onScroll);
      onScroll();
    </script>
  </body>
</html>
